{
  "output": "CHANGELOG.md",
  "unreleased": true,
  "template": "keepAChangelog",
  "sort-commits": true,
  // Setting commit-limit to false means there is no limit on the number of commits included in the changelog.
  "commit-limit": false,
  "types": {
    "feat": "Added",
    "perf": "Performance Improvements",
    "perf": "Changed",
    "refactor": "Changed",
    "docs": "Documentation",
    "style": "Code Style Updates",
    "test": "Testing",
    "chore": "Chores"
  },
  "groups": [
    {
      "title": "Added",
      "types": ["feat"]
    },
    {
      "title": "Changed",
      "types": ["perf", "refactor", "style"]
    },
    {
      "title": "Fixed",
      "types": ["fix"]
    },
    {
      "title": "Documentation",
      "types": ["docs"]
    },
    {
      "title": "Testing",
      "types": ["test"]
    },
    {
      "title": "Chores",
      "types": ["chore"]
    }
  ],
  // The tag-prefix is used to prefix version tags in the changelog, e.g., "v1.0.0".
  "tag-prefix": "v",
  "hide-empty-sections": true
}
